@model KnowLedgeHub.Domain.Entities.Category
@{
    ViewBag.Title = "Create";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<h2>Create</h2>
<h2>@ViewBag.Message</h2>
<form method="post" class="container">
    <div class="row">
        @*<label for="catName">Category Name</label>
        <input id="catName" name="name" type="text" />*@
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m=>m.Name)
        @Html.ValidationMessageFor(m=>m.Name)
    </div>
    <div class="row">
        @*<label for="catDesc">Category Description</label>
        <textArea cols="60" name="description" rows="6" id="catDesc"></textArea>*@
        @Html.LabelFor(m=>m.Description)
        @Html.TextBoxFor(m=>m.Description)
        @Html.ValidationMessageFor(m=>m.Description)
    </div>
    <input class="row rounded m-1" type="submit" value="Submit"/>
</form>
